@import 'colors'

.stripe
  opacity: 1

.stripe-payment
  opacity: 0
  max-height: 0
  overflow: hidden
  visibility: hidden
  transition: opacity 0.5s linear
  &.active
    opacity: 1
    visibility: visible
    max-height: 1000px

.stripe-card
  text-align: left

.stripe-form
  margin-top: 20px

.stripe-input
  &.error
    border: 1px $red solid
    padding: 2px

.react-credit-card
  min-width: 280px
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.4)

.react-credit-card__container
  margin: 0 auto

.react-credit-card__front,
.react-credit-card__back
  background: $gray5

.react-credit-card__front
  opacity: 1

.react-credit-card__back
  transform: none
  opacity: 0

.react-credit-card--focused
  font-weight: 400

.react-credit-card--flipped
  transform: none
  .react-credit-card__front
    opacity: 0
  .react-credit-card__back
    opacity: 1

.react-credit-card__expiry
  text-align: right
  &:before
    margin-right: 3px
  &:after
    bottom: 5px
    margin-right: -11px

.react-credit-card__name
  bottom: -4px

.react-credit-card__container
  min-width: 280px
  max-width: 350px
  width: auto

.react-credit-card__shiny:after
  width: 200px
