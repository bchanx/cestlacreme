@import 'colors'

html
  font-size: 16px
  font-weight: 300
  font-family: 'Source Sans Pro', Helvetica, arial, sans-serif
  background-color: $gray1
  color: $orange
  overflow-y: scroll
  width: 100vw
  height: 100vh

body
  width: 100%
  height: 100%

a,
a:link,
a:visited,
a:active,
a:focus
  color: $gray3
  font-weight: 400
  text-decoration: none

a:hover
  color: $gray1
