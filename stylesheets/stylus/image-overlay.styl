.image-overlay
  z-index: 9001
  background-color: rgba(34, 34, 34, 0.95)
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  display: block
  overflow: scroll
  min-height: 400px
  color: $white
  user-select: none
  visibility: hidden
  opacity: 0
  transition: opacity 0.2s linear
  &.active
    opacity: 1
    visibility: visible

.image-overlay-close
  position: fixed
  right: 20px
  top: 20px
  color: $gray4
  font-size: 1.2em
  cursor: pointer
  &:hover
    color: $white

.image-overlay-container
  display: flex
  width: 80%
  height: 80%
  margin: 10vh auto
  flex-direction: row
  justify-content: center
  position: relative
  .image
    flex-grow: 1
    background-size: 100%
    background-repeat: no-repeat
    background-position-x: 50%
    background-position-y: 50%
    max-width: 80vh
    min-width: 320px
  .chevron
    position: absolute
    color: $gray4
    width: 5vw
    max-width: 50px
    height: 100%
    cursor: pointer
    display: flex
    flex-direction: column
    justify-content: center
    font-size: 2em
    &:hover
      color: $white
    &.left
      left: -7vw
    &.right
      right: -7vw

@media screen and (max-width: $app-small)
  .image-overlay-container
    height: 60%
    margin: 20vh auto
    .chevron
      width: 10vw
      font-size: 1.5em
      &.left
        left: -10vw
      &.right
        right: -10vw
