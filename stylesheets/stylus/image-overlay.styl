.image-overlay
  z-index: 9001
  background-color: rgba(34, 34, 34, 0.95)
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  display: block
  overflow: scroll
  min-height: 400px
  color: $white
  visibility: hidden
  opacity: 0
  transition: opacity 0.2s linear
  &.active
    opacity: 1
    visibility: visible

.image-overlay-close
  position: fixed
  right: 20px
  top: 20px
  color: $gray4
  font-size: 1.2em
  cursor: pointer
  &:hover
    color: $white

.image-overlay-container
  display: flex
  width: 80%
  height: 80%
  margin: 10vh auto
  flex-direction: row
  justify-content: center
  position: relative
  .chevron
    user-select: none
    position: absolute
    color: $gray4
    width: 5vw
    max-width: 50px
    height: 100%
    cursor: pointer
    display: flex
    flex-direction: column
    justify-content: center
    font-size: 2em
    &:hover
      color: $white
    &.left
      left: -7vw
    &.right
      right: -7vw

.image-background
  flex-grow: 1
  background-size: 100%
  background-repeat: no-repeat
  background-position-x: 50%
  background-position-y: 50%
  max-width: 80vh
  min-width: 320px
  position: relative
  &:hover
    .image-meta
      opacity: 1

.image-meta
  opacity: 0
  position: absolute
  bottom: 0
  background-color: rgba(34, 34, 34, 0.85)
  font-size: 0.8em
  max-height: 100%
  padding: 15px 20px 5px
  width: 100%
  overflow: hidden
  transition: opacity 0.2s linear
  a:hover
    color: $orange-light
  > div
    margin-bottom: 10px

.image-description
  overflow: hidden
  text-overflow: ellipsis
  text-align: left

.image-header
  display: flex
  flex-direction: row
  justify-content: space-between
  text-decoration: underline

.image-timestamp
  flex-shrink: 0

.image-source
  flex-shrink: 0

@media screen and (max-width: $app-medium)
  .image-overlay-container
    .chevron
      width: 10vw
      font-size: 1.5em
      &.left
        left: -10vw
      &.right
        right: -10vw

@media screen and (max-width: $app-small)
  .image-overlay-container
    height: 50%
    margin: 30vh auto
