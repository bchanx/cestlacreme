$app-width = 1000px

html
  background-color: $gray1
  color: $black
  font-size: 18px

a,
a:link,
a:visited,
a:active
a:focus
  color: $orange
  font-weight: 400
  text-decoration: none

a:hover
  color: $orange-dark

#app
  height: 100%
  margin: 0 auto

.container
  width: 100%
  height: 100%
  min-height: 400px
  display: flex
  flex-direction: row

.content
  position: relative
  padding: 60px 40px
  padding-right: "calc((100vw - %s)/2 + 40px)" % $app-width;
  flex-grow: 1
  text-align: center
  overflow-y: scroll
  background-color: $gray1

.bold
  font-weight: 400

.break
  width: 2px
  height: 2px
  background-color: $gray4
  opacity: 0.5
  position: relative
  margin: 25px auto
  &:before,
  &:after
    content: ""
    position: absolute
    width: 50px
    height: 2px
    background-color: $gray4
    opacity: 0.3
  &:before
    left: -53px
  &:after
    right: -53px

.footer
  line-height: 38px
  font-size: 0.8em
  a
    font-weight: 300
  .site
    margin-left: 15px

@media screen and (max-width: $app-width)
  .container
    flex-direction: column
  .content
    padding: 4vw
  .footer
    line-height: normal

@media screen and (max-width: 600px)
  html
    font-size: 16px
  .content
    padding: 20px
    padding-bottom: 40px

