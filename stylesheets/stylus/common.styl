.bold
  font-weight: 400

.note
  font-size: 0.8em
  font-style: italic
  color: $gray7

.break
  width: 2px
  height: 2px
  background-color: $gray4
  opacity: 0.5
  position: relative
  margin: 25px auto
  &:before,
  &:after
    content: ""
    position: absolute
    width: 50px
    height: 2px
    background-color: $gray4
    opacity: 0.3
  &:before
    left: -53px
  &:after
    right: -53px

.loading
  display: inline-block
  color: $orange-light
  font-size: 2em
  span
    animation: loading 1s linear infinite
  &.large
    line-height: 100px
    font-size: 2.5em

@keyframes loading {
  0% {
    transform: rotateZ(0)
  }
  100% {
    transform: rotateZ(359deg)
  }
}
